<odoo>
    <record id="sample_submission_server_action" model="ir.actions.server">
        <field name="name">Create Required Materials</field>
        <field name="model_id" ref="anj_sample_submission.model_sample_submission_form"/>
        <field name="type">ir.actions.server</field>
        <field name="binding_model_id" ref="anj_sample_submission.model_sample_submission_form"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action= model.open_materials_wizard()
        </field>
    </record>

        <record id="create_invoice_server_action" model="ir.actions.server">
        <field name="name">Create Invoice</field>
        <field name="model_id" ref="anj_sample_submission.model_sample_submission_form"/>
        <field name="type">ir.actions.server</field>
        <field name="binding_model_id" ref="anj_sample_submission.model_sample_submission_form"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action= model.open_confirmation_wizard()
        </field>
    </record>
</odoo>
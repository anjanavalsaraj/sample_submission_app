<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="anj_sample_submission.module_category_sample_submission" model="ir.module.category">
                    <field name="name">Sample submission app</field>

            <field name="description">Handle sample submission datas.</field>
            <field name="sequence">90</field>
        </record>

        <record id="group_own_documents" model="res.groups">
            <field name="name">User: Own Documents</field>
            <field name="category_id" ref="anj_sample_submission.module_category_sample_submission"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the sample submission app.</field>
        </record>

        <record id="group_all_documents" model="res.groups">
            <field name="name">User: All Documents</field>
            <field name="category_id" ref="anj_sample_submission.module_category_sample_submission"/>
            <field name="implied_ids" eval="[(4, ref('group_own_documents'))]"/>
            <field name="comment">the user will have access to all records of everyone in the sample submission app.</field>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="comment">the user will have an access to the repotts and all records in the sample submission app.</field>
            <field name="category_id" ref="anj_sample_submission.module_category_sample_submission"/>
            <field name="implied_ids" eval="[(4, ref('group_all_documents'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

</odoo>

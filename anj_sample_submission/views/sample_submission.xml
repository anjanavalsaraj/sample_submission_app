<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="sample_submission_form_view_tree" model="ir.ui.view">
            <field name="name">sample.submission.form.view.tree</field>
            <field name="model">sample.submission.form</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Sample Submission Form" sample="1" multi_edit="1">
                    <field name="sequence" string="Sequence"/>
                    <field name="name" string="Name"/>
                    <field name="partner_id"/>
                    <field name="stage" decoration-success="stage == 'completed_easily'"
                           decoration-muted="stage == 'pending'"
                           decoration-info="stage == 'doing'" widget="badge"/>
                </tree>
            </field>
        </record>


        <record id="sample_submission_form_view_form" model="ir.ui.view">
            <field name="name">sample.submission.form.view.form</field>
            <field name="model">sample.submission.form</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Sample Submission Form">
                    <header>
                        <field name="stage" widget="statusbar"/>
                        <button name="action_start" type="object" string="Start" class="btn btn-primary"
                                attrs="{'invisible':[('stage','in',['doing','completed_easily'])]}"/>
                        <button name="action_mark_done" type="object" string="Mark as Done" class="btn btn-primary"
                                attrs="{'invisible':[('stage','in',['pending','completed_easily'])]}"/>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"
                             attrs="{'invisible':[('invoice_count','=',0)]}">
                            <field name="invoice_ids" invisible="1"/>
                            <field name="invoice_count" invisible="1"/>
                            <button class="oe_stat_button" type="object" name="action_get_invoices"
                                    icon="fa-pencil-square-o" string="Invoices">
                            </button>

                        </div>
                        <div class="oe_title">
                            <field name="sequence"/>
                            <h1>
                                <!--                                <group>-->
                                <field name="name" class="oe_title" nolabel="1" required="1"/>
                                <!--                                </group>-->
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="date" required="1"/>
                                <field name="partner_id" required="1"/>
                                <field name="user_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="price" required="1"/>
                                <field name="discount"/>
                                <field name="tax_id"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Materials Required" name="sample_submission_material_ids">
                                <field name="sample_submission_material_ids">
                                    <tree create="0" edit="0">
                                        <field name="sl_no"/>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="remarks"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="sample_submission_form_search" model="ir.ui.view">
            <field name="name">sample.submission.form.search</field>
            <field name="model">sample.submission.form</field>
            <field name="arch" type="xml">
                <search string="Search Samples">
                    <field name="name" string="Name"/>
                    <field name="sequence" string="Sequence"/>
                    <field name="partner_id" string="Customer"/>

                    <group expand="1" string="Group by">
                        <filter string="Salesperson" name="user_id" context="{'group_by': 'user_id'}"/>
                        <filter string="Stages" name="stage" context="{'group_by': 'stage'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="sample_submission_form_action" model="ir.actions.act_window">
            <field name="name">Sample Submission</field>
            <field name="res_model">sample.submission.form</field>
            <field name="view_mode">tree,form</field>

        </record>

        <menuitem id="sample_submission_menu" name="Sample Submission" sequence="60"
                  groups="anj_sample_submission.group_own_documents"
        />

        <menuitem id="sample_submission_sub_menu" name="Sample Submission"
                  action="anj_sample_submission.sample_submission_form_action" sequence="1"
                  parent="anj_sample_submission.sample_submission_menu"
        />


    </data>
</odoo>